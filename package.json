{
  "name": "vapper",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "test": "yarn lint && node ./scripts/e2eRunner.js",
    "lint": "standard --fix",
    "commit": "git-cz"
  },
  "repository": "https://github.com/vapperjs/vapper.git",
  "author": "HcySunYang <HcySunYang@outlook.com>",
  "license": "MIT",
  "devDependencies": {
    "cypress": "^3.4.1",
    "cz-lerna-changelog": "^2.0.2",
    "husky": "^3.0.1",
    "jest": "^24.8.0",
    "lerna": "^3.14.1",
    "lerna-changelog": "^0.8.2",
    "lint-staged": "^9.2.0",
    "standard": "^13.0.2"
  },
  "standard": {
    "ignore": [
      "examples/**",
      "*.ejs"
    ],
    "globals": ["describe", "it", "expect", "cy"]
  },
  "lint-staged": {
    "*.js": [
      "npm run lint",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-lerna-changelog"
    }
  }
}
